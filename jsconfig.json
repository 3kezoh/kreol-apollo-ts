{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"],
      "@api": ["./api/index.js"],
      "@api/*": ["./api/*"],
      "@components": ["./api/components/index.js"],
      "@components/*": ["./api/components/*"],
      "@Definition": ["./api/components/definition/Definition.js"],
      "@User": ["./api/components/user/User.js"],
      "@apollo": ["./apollo/index.js"],
      "@apollo/*": ["./apollo/*"],
      "@bin": ["./bin/index.js"],
      "@bin/*": ["./bin/*"],
      "@config": ["./config/index.js"],
      "@config/*": ["./config/*"],
      "@directives": ["./directives/index.js"],
      "@directives/*": ["./directives/*"],
      "@middlewares": ["./middlewares/index.js"],
      "@middlewares/*": ["./middlewares/*"],
      "@scalars": ["./scalars/index.js"],
      "@scalars/*": ["./scalars/*"]
    }
  },
  "exclude": ["node_modules"]
}
