{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2015",
    "outDir": "dist",
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "typeRoots": ["./src/@types", "./node_modules/@types", "./node_modules/**/*"],
    "baseUrl": "src",
    "paths": {
      "@@*": ["@types/*"],
      "@components": ["components/index.ts"],
      "@components/*": ["components/*"],
      "@Auth": ["components/auth/index.ts"],
      "@Auth/*": ["components/auth/*"],
      "@Definition": ["components/definition/index.ts"],
      "@Definition/*": ["components/definition/*"],
      "@Report": ["components/report/index.ts"],
      "@Report/*": ["components/report/*"],
      "@User": ["components/user/index.ts"],
      "@User/*": ["components/user/*"],
      "@Vote": ["components/vote/index.ts"],
      "@Vote/*": ["components/vote/*"],
      "@bin": ["bin/index.ts"],
      "@bin/*": ["bin/*"],
      "@config": ["config/index.ts"],
      "@config/*": ["config/*"],
      "@directives": ["directives/index.ts"],
      "@directives/*": ["directives/*"],
      "@middlewares": ["middlewares/index.ts"],
      "@middlewares/*": ["middlewares/*"],
      "@scalars": ["scalars/index.ts"],
      "@scalars/*": ["scalars/*"],
      "@utils": ["utils/index.ts"],
      "@utils/*": ["utils/*"],
      "@test": ["utils/test/index.ts"],
      "@test/*": ["utils/test/*"]
    }
  },
  "include": ["./src/**/*"]
}
